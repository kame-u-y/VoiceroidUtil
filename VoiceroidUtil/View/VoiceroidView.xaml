<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:tk="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:ru="http://schemas.ruche-home.net/xaml/windows/mvvm"
    xmlns:v="clr-namespace:VoiceroidUtil.View"
    xmlns:vm="clr-namespace:VoiceroidUtil.ViewModel"
    x:Class="VoiceroidUtil.View.VoiceroidView"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance vm:VoiceroidViewModel, IsDesignTimeCreatable=True}"
    UseLayoutRounding="True"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextRenderingMode="ClearType">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/VoiceroidUtil;component/resources/CommonStyles.xaml" />
                <ResourceDictionary
                    Source="/VoiceroidUtil;component/resources/VoiceroidStyles.xaml" />
                <ResourceDictionary
                    Source="/VoiceroidUtil;component/resources/Converters.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Row 0 -->
        <DockPanel Grid.Row="0">
            <Button
                Command="{Binding RunExitCommand}"
                ToolTip="起動/終了 (F3)"
                Margin="1,0,0,0"
                Padding="4"
                TabIndex="1"
                DockPanel.Dock="Right">
                <Image Style="{StaticResource VoiceroidRunExitIcon}" />
            </Button>
            <ComboBox
                ItemsSource="{Binding VisibleProcesses.Value}"
                SelectedItem="{Binding SelectedProcess.Value}"
                ToolTip="{Binding SelectVoiceroidCommandTip.Value}"
                Padding="2,1"
                MaxDropDownHeight="480"
                TabIndex="0">
                <ComboBox.Resources>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Padding" Value="0" />
                    </Style>
                </ComboBox.Resources>
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid
                            Columns="{Binding VisibleProcessesColumnCount.Value}" />
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <Image
                                Style="{StaticResource VoiceroidProcessImage}"
                                Margin="0,0,4,0"
                                DockPanel.Dock="Left" />
                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Text="{Binding Name, Mode=OneWay}"
                                        FontWeight="Bold" />
                                    <TextBlock
                                        Text="{Binding DisplayProduct, Mode=OneWay}"
                                        FontSize="11"
                                        VerticalAlignment="Bottom"
                                        Margin="6,0,0,0"
                                        Padding="0,0,4,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger
                                                        Binding="{Binding HasMultiCharacters}"
                                                        Value="True">
                                                        <Setter
                                                            Property="Visibility"
                                                            Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                        <TextBlock.LayoutTransform>
                                            <ScaleTransform ScaleX="0.75" />
                                        </TextBlock.LayoutTransform>
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                    <Image
                                        Style="{StaticResource VoiceroidProcessStatusIcon}" />
                                    <TextBlock
                                        Style="{StaticResource VoiceroidProcessStatusText}"
                                        Margin="2,0,0,0" />
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </DockPanel>

        <!-- Row 1 -->
        <Grid Grid.Row="1">
            <v:ImeWatermarkTextBox
                Text="{Binding TalkText.Value, UpdateSourceTrigger=Explicit}"
                MaxLength="{Binding TalkTextLengthLimit.Value}"
                IsEnabled="{Binding IsTalkTextEditable.Value}"
                AcceptsReturn="True"
                AcceptsTab="{Binding IsTalkTextTabAccepted.Value}"
                Margin="0,2,0,0"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto"
                >
                <v:ImeWatermarkTextBox.Style>
                    <Style
                        TargetType="v:ImeWatermarkTextBox"
                        BasedOn="{StaticResource {x:Type tk:WatermarkTextBox}}">
                        <Style.Triggers>
                            <DataTrigger
                                Binding="{Binding IsTalkTextEditable.Value}"
                                Value="False">
                                <Setter
                                    Property="Background"
                                    Value="{DynamicResource
                                        {x:Static SystemColors.ControlLightBrushKey}}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </v:ImeWatermarkTextBox.Style>
                <v:ImeWatermarkTextBox.InputBindings>
                    <KeyBinding Gesture="Alt+Enter" Command="{Binding PlayStopCommand}" />
                    <KeyBinding Gesture="Ctrl+Enter" Command="{Binding SaveCommand}" />
                </v:ImeWatermarkTextBox.InputBindings>
                <v:ImeWatermarkTextBox.Watermark>
                    <TextBlock>
                        しゃべらせたい文章を入力してください。<LineBreak />
                        F5, Ctrl+Q または入力中に Alt+Enter で再生します。<LineBreak />
                        F6, Ctrl+S または入力中に Ctrl+Enter で音声保存します。<LineBreak />
                        F9, Ctrl+E で保存先フォルダーを開きます。
                    </TextBlock>
                </v:ImeWatermarkTextBox.Watermark>

                <i:Interaction.Behaviors>
                    <ru:DragDropCommandBehavior
                        PreviewDragOverCommand="{Binding DragOverTalkTextFileCommand}"
                        DropCommand="{Binding DropTalkTextFileCommand}" />
                </i:Interaction.Behaviors>
            </v:ImeWatermarkTextBox>
            <!-- TRToys'拡張：プレビューウィンドウ -->
            <Border
                BorderBrush="Silver"
                BorderThickness="1"
                CornerRadius="2"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Height="70"
                Background="#fafafa"
                Margin="0,0,20,20">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding PreviewStyleValue.Value.IsTextSplitting}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid
                            Grid.Row="0" 
                            Background="LightSteelBlue">
                            <Label 
                                Content="Preview"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Center"
                                />
                        </Grid>

                        <Grid 
                            Grid.Row="1"
                            Width="{Binding PreviewStyleValue.Value.PreviewWindowWidth}"
                            Background="#f5f5f5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="{Binding PreviewStyleValue.Value.PreviewLeftMargin}"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="{Binding PreviewStyleValue.Value.PreviewRightMargin}"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Background="Silver"/>
                            <StackPanel 
                                Grid.Column="1"
                                VerticalAlignment="{Binding PreviewStyleValue.Value.Text.Vertical}">
                                <ItemsControl ItemsSource="{Binding PreviewTextList}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid 
                                                Margin="{
                                                    Binding 
                                                        Path=DataContext.PreviewStyleValue.Value.Text.PreviewLineSpace,
                                                        RelativeSource={
                                                            RelativeSource FindAncestor, 
                                                            AncestorType={x:Type UserControl}}}">
                                                <!-- 1行ごとのGlyphs字幕 -->
                                                <Glyphs
                                                    UnicodeString="{Binding Text}"
                                                    HorizontalAlignment="{
                                                        Binding 
                                                            Path=DataContext.PreviewStyleValue.Value.Text.Horizontal,
                                                            RelativeSource={
                                                                RelativeSource FindAncestor, 
                                                                AncestorType={x:Type UserControl}}}"
                                                    FontUri="{
                                                        Binding 
                                                            Path=DataContext.PreviewStyleValue.Value.Text.PreviewFontUri,
                                                            RelativeSource={
                                                                RelativeSource FindAncestor, 
                                                                AncestorType={x:Type UserControl}}}"
                                                    Fill="{
                                                        Binding 
                                                            Path=DataContext.PreviewStyleValue.Value.Text.PreviewFontColor,
                                                            RelativeSource={
                                                                RelativeSource FindAncestor, 
                                                                AncestorType={x:Type UserControl}}}"
                                                    FontRenderingEmSize="{
                                                        Binding 
                                                            Path=DataContext.PreviewStyleValue.Value.PreviewFontSize,
                                                            RelativeSource={
                                                                RelativeSource FindAncestor, 
                                                                AncestorType={x:Type UserControl}}}"/>
                                                    <!--Indices="{Binding Indices}"-->
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            <Grid Grid.Column="2" Background="Silver"/>
                        </Grid>
                    </Grid>
                    <!-- 前のプレビューシーンに戻るボタン-->
                    <Grid
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Height="15"
                        Width="30"
                        Background="#444">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <i:InvokeCommandAction Command="{Binding BackSceneCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Opacity" Value="0.7"/>
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMultiScenePreview.Value}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsFirstScene.Value}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Label HorizontalAlignment="Center" Content="&lt;" FontWeight="Bold"/>
                    </Grid>
                    <!-- 次のプレビューシーンに進むボタン-->
                    <Grid
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Height="15"
                        Width="30"
                        Background="#444">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <i:InvokeCommandAction Command="{Binding NextSceneCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Opacity" Value="0.7"/>
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="1"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsMultiScenePreview.Value}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsLastScene.Value}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Label HorizontalAlignment="Center" Content="&gt;" FontWeight="Bold" />
                    </Grid>
                </Grid>
            </Border>
            <!-- /TRToys'拡張 -->
        </Grid>

        <!-- Row 2 -->
        <StackPanel Orientation="Horizontal" Margin="0,2,0,0" Grid.Row="2">
            <Button Command="{Binding PlayStopCommand}" ToolTip="F5">
                <StackPanel Orientation="Horizontal">
                    <Image Style="{StaticResource VoiceroidPlayStopIcon}" />
                    <AccessText
                        Style="{StaticResource VoiceroidPlayStopText}"
                        Margin="2,0,0,0" />
                </StackPanel>
            </Button>
            <Button Command="{Binding SaveCommand}" ToolTip="F6" Margin="2,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/VoiceroidUtil;component/resources/icon/save.png" />
                    <AccessText Text="音声保存(_S)" Margin="2,0,0,0" />
                </StackPanel>
            </Button>
            <CheckBox
                Content="本体側の文章を使う(_T)"
                IsChecked="{Binding UseTargetText.Value}"
                Margin="8,0,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
