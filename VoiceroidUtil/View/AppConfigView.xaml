                                    UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding
                                    Path=Config.Value.IsTextSpliting,
                                    Mode=OneWay}"
                                Width="43"
                                Margin="8,4,0,0"/>
                        </DockPanel>
