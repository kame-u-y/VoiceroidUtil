                                SelectedItem="{Binding Text.Value.TextAlignment}"
                                MinWidth="104"
                                Margin="4,0,0,0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Text="{Binding
                                                Converter={StaticResource
                                                    ResourceKey=enumDisplayConverter}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="26,8,0,0">
                            <Label
                                Content="字間(_T):"
                                Target="{Binding ElementName=Text_LetterSpace}"
                                Margin="4,0,0,0"/>
                            <tk:IntegerUpDown
                                x:Name="Text_LetterSpace"
                                Value="{Binding
                                    Path=Text.Value.LetterSpace,
                                    UpdateSourceTrigger=PropertyChanged}"
                                Minimum="-100"
                                Maximum="100"
                                MinWidth="56"
                                Margin="4,0,0,0" />
                            <Label
                                Content="行間(_R):"
                                Target="{Binding ElementName=Text_LineSpace}"
                                Margin="8,0,0,0" />
