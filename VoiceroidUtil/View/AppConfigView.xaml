                            Content="項目「.exo(4)」の「キャラクター別」設定を使用"
                            IsChecked="{Binding 
                                Path=Config.Value.SplitModeValue,
                                Mode=TwoWay,
                                Converter={StaticResource boolToEnumConverter},
                                ConverterParameter=LineFeed,
                                UpdateSourceTrigger=PropertyChanged}"
                            IsEnabled="{Binding
                                Path=Config.Value.IsTextSpliting,
                                Mode=OneWay}"
                            Margin="20,4,0,0"/>
                        <RadioButton 
                            Content="以下の設定を使用"
                            IsChecked="{Binding 
                                Path=Config.Value.SplitModeValue,
                                Mode=TwoWay,
                                Converter={StaticResource boolToEnumConverter},
                                ConverterParameter=SplitFile,
                                UpdateSourceTrigger=PropertyChanged}"
                            IsEnabled="{Binding
                                Path=Config.Value.IsTextSpliting,
                                Mode=OneWay}"
                            Margin="20,4,0,0"/>
                        <ComboBox
                            ItemsSource="{Binding VisibleCharaStyles.Value}"
                            SelectedItem="{Binding SelectedCharaStyle.Value}"
                            ToolTip="{Binding SelectCharaStyleCommandTip.Value}"
                            Padding="2,1"
                            Margin="20,10,20,0"
                            DockPanel.Dock="Top">
                            <ComboBox.Resources>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Padding" Value="0,0,4,0" />
                                </Style>
                            </ComboBox.Resources>
                            <ComboBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid
                                    Columns="{Binding VisibleCharaStylesColumnCount.Value}" />
                                </ItemsPanelTemplate>
                            </ComboBox.ItemsPanel>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel>
                                        <Image
                                            DataContext="{Binding VoiceroidId}"
                                            Style="{StaticResource VoiceroidIdImage}"
                                            Margin="0,0,4,0"
                                            DockPanel.Dock="Left" />
                                        <StackPanel
                                            Orientation="Vertical"
                                            VerticalAlignment="Center">
                                            <TextBlock
                                                Text="{Binding VoiceroidName, Mode=OneWay}"
                                                FontWeight="Bold" />
                                            <TextBlock
                                                Text="※キャラ不確定時のみ"
                                                FontSize="11"
                                                Margin="0,2,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter
                                                            Property="Visibility"
                                                            Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger
                                                                Binding="{Binding
                                                                    Path=HasMultiVoiceroidCharacters}"
                                                                Value="True">
                                                                <Setter
                                                                    Property="Visibility"
                                                                    Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </DockPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <StackPanel Margin="20,10,20,0">
                            
                            <v:MovableValueControl DataContext="{Binding X}" Margin="0,0,0,0" />
                            <v:MovableValueControl DataContext="{Binding Y}" Margin="0,4,0,0" />
                            <v:MovableValueControl DataContext="{Binding Z}" Margin="0,4,0,0" />
                            <v:MovableValueControl
                                DataContext="{Binding Scale}"
                                Margin="0,4,0,0" />
                            <v:MovableValueControl
                                DataContext="{Binding FontSize}"
                                Margin="0,4,0,0" />
                        </StackPanel>
