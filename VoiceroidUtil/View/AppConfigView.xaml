                                IsEnabled="{Binding
                                    Path=Config.Value.IsTextSpliting,
                                    Mode=OneWay}"
                                Width="43"
                                Margin="0,4,0,0"/>
                            <Label
                                Content="拡大率："
                                Margin="40,4,0,0"/>
