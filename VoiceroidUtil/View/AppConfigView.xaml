                                Margin="12,4,0,0"/>
                        </DockPanel>-->
                        <StackPanel Orientation="Horizontal" Margin="26,10,8,0">
                            <Label
                                Content="フォント："
                                Margin="4,0,0,0"/>
                            <ComboBox
                                x:Name="Text_FontFamilyName"
                                ItemsSource="{Binding FontFamilyNames}"
                                SelectedItem="{Binding Text.Value.FontFamilyName}"
                                Margin="4,0,0,0"
                                Grid.Row="0" 
                                Grid.Column="1" 
                                Width="130"/>
                            <tk:DropDownButton
                                Padding="6,3"
                                Margin="4,0,0,0"
                                Grid.Row="0" Grid.Column="2">
                                <tk:DropDownButton.DropDownContent>
                                    <tk:ColorCanvas
                                        SelectedColor="{Binding Text.Value.FontColor}"
                                        UsingAlphaChannel="False" />
                                </tk:DropDownButton.DropDownContent>

                                <StackPanel Orientation="Horizontal" MinWidth="86">
                                    <Rectangle
                                        Stroke="Gray"
                                        Width="16"
                                        RadiusX="4" RadiusY="4">
                                        <Rectangle.Fill>
                                            <SolidColorBrush
                                                Color="{Binding Text.Value.FontColor}" />
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <AccessText Text="文字色(_C)" Margin="4,0,0,0" />
                                </StackPanel>
                            </tk:DropDownButton>
